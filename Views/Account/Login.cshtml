


@model ProductManagementSystem.Models.ViewModel.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center vh-100">
    <div class="card p-4 shadow-lg" style="width: 350px; margin-top: -50px; position: absolute; left: 50%; transform: translateX(-50%);">
        <h2 class="text-center mb-4">Login</h2>
        @if (ViewBag.Message != null)
        {
            <p style="color:red">@ViewBag.Message</p>
        }
        <form asp-controller="Account" asp-action="Login" method="post">
            <div class="form-group mb-3">
                <label asp-for="User_name" class="form-label">Username</label>
                <input asp-for="User_name" class="form-control" type="text" required />
                <span asp-validation-for="User_name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" class="form-control" type="password" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary w-100">Login</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
