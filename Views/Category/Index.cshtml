@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

<h1>Category List</h1>

<button class="btn btn-success btn-outline-success text-white-50"> <a asp-controller="Category" asp-action="AddCategory" class="text-white"> Add Category</a> </button>

<table class="table table-sm" >
    <thead>
        <tr>
            <th style="text-align: left;">@Html.DisplayNameFor(model => model.First().Id)</th>
            <th style="text-align: left;">@Html.DisplayNameFor(model => model.First().Name)</th>
            <th style="text-align: left;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align: left;">@item.Id</td>
                <td style="text-align: left;">@item.Name</td>
                <td class="align-middle">
                    <a class="btn btn-outline-primary" asp-action="EditCategory" asp-route-id="@item.Id"> <i class="bi bi-pencil-square"></i> Edit</a>|

                    <a class="btn btn-danger text-white" asp-action="DeleteCategory" asp-route-id="@item.Id"> <i class="bi bi-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
