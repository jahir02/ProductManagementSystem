@model IEnumerable<SalesOrderViewModel>
@{
    ViewData["Title"] = "Index";
}

<h1>Order List</h1>

<button class="btn btn-success btn-outline-success text-white-50"> <a asp-controller="SalesOrder" asp-action="AddNewSalesOrder" class="text-white"> Add Sales Order</a> </button>

<table class="table table-sm">
    <thead>
        <tr>
            <th style="text-align: left;">SaleId</th>
            <th style="text-align: left;">PartyName</th>
            <th style="text-align: left;">Salestype</th>
            <th style="text-align: left;">Sales date</th>
            <th style="text-align: left;">Total Amount</th>
            <th style="text-align: left;">Total GST</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="text-align: left;">@item.HeaderId</td>
                <td style="text-align: left;">@item.Username</td>
                <td style="text-align: left;">@item.SalesType</td>
                <td style="text-align: left;">@item.SalesDate</td>
                <td style="text-align: left;">@item.TotalAmount</td>
                <td style="text-align: left;">@item.TotalGst</td>
                <td class="align-middle">
                    <a class="btn btn-outline-primary" asp-action="Orderdetails" asp-route-id="@item.HeaderId"> <i class="bi bi-pencil-square"></i> Details</a>|

            </tr>
        }
    </tbody>
</table>
