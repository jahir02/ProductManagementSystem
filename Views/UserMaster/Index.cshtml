@model IEnumerable<UserMaster>
@{
    ViewData["Title"] = "Index";
}

<h1>User List</h1>
<button class="btn btn-success btn-outline-success text-white-50"> <a asp-controller="UserMaster" asp-action="addusermaster" class="text-white"> Add UserMaster</a> </button>
<table class="table">
    <thead>
        <tr class="text-center">
            <th>@Html.DisplayNameFor(model => model.First().UserId)</th>
            <th>@Html.DisplayNameFor(model => model.First().Name)</th>
            <th>@Html.DisplayNameFor(model => model.First().Phone)</th>
            <th>@Html.DisplayNameFor(model => model.First().Email)</th>
            <th>@Html.DisplayNameFor(model => model.First().Address)</th>
            <th style="text-align: left;">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="align-middle text-center">@item.UserId</td>
                <td class="align-middle">@item.Name</td>
                <td class="align-middle">@item.Phone</td>
                <td class="align-middle">@item.Email</td>
                <td class="align-middle">@item.Address</td>
                <td class="align-middle">
                    <a class="btn btn-outline-primary" asp-action="EditUserMaster" asp-route-id="@item.UserId"> <i class="bi bi-pencil-square"></i> Edit</a>|

                    <a class="btn btn-danger text-white" asp-action="DeleteUserMaster" asp-route-userId="@item.UserId"> <i class="bi bi-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
